             x:Class="App10.MainPage" >


    <StackLayout  >
        <!--to display button when keyboard appear
        1-add scroll and put inside it stacklayout
        2-add in app.cs      
        -->
        <ScrollView>
            
           <StackLayout>
                <Image Source="EasyDoctor.png" Margin="0,0,0,0"></Image>
                <StackLayout BackgroundColor="LightBlue" Margin="20,0,20,30">
                   
                    <Label Text="Login" FontSize="30" FontFamily="Comic Sans MS" Margin="0,15,0,0" 
                            TextColor="#302138" HorizontalTextAlignment="Center"></Label>
                    <Entry Placeholder="E-mail" Margin="40,0,40,0" Keyboard="Email"/>
                    <Entry  Placeholder="Password" IsPassword="True" Margin="40,0,40,0"/>
                 </StackLayout>
               
            </StackLayout>
        </ScrollView>
        
        <Button Text="Login"   TextColor="White" BackgroundColor="#302138" Margin="40,10,40,0"/>
        <Button Text="Singup"   TextColor="White" BackgroundColor="#302138" Margin="40,0,40,25"/>

        </StackLayout>
     
